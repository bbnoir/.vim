" color
syntax on
color elflord

" number
set rnu
set nu
hi LineNr ctermfg=white
hi CursorLineNr ctermfg=cyan

" search
set incsearch
set ignorecase
set smartcase
set hlsearch

" tab & indent
set softtabstop=2
set shiftwidth=2
set smarttab
set expandtab
set autoindent
set smartindent

" window
set splitbelow
set splitright

" filetype
filetype on
filetype indent on
filetype plugin on

" line
set noru
set wildmenu

" others
set scrolloff=10
set noerrorbells
set backspace=indent,eol,start
set noesckeys
set noswapfile
